Patch "Disable Motion Blur" in "Graphics/Post-processing" by "Hyper" does "Disables motion blur when boosting, surfing or gliding."
{
    // Disable player motion blur.
    WriteProtected<byte>
    (
        /* v1.1.0.0: 0x1406C176F */
        ScanSignature
        (
            "\x41\x0F\xB6\x4E\x70",
            "xxxxx"
        ),
        
        Assemble("mov ecx, 0")
    );

    // Disable scene motion blur.
    WriteAsmHook
    (
        "mov byte ptr [r11], 0",

        /* v1.1.0.0: 0x14968103E */
        ScanSignature
        (
            "\x41\x0F\x28\x33\x0F\x29\xBC\x24\x80\x00\x00\x00",
            "xxxxxxxxxxxx"
        ),

        HookBehavior.After
    );
}